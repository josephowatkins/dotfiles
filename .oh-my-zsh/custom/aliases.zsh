## Locations
alias s='cd ~/Documents/signal'
alias h='cd ~/Documents/haskell'

## Utils
alias L='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'
alias t1='tree -L 1'
alias t2='tree -L 2'
alias t3='tree -L 3'
alias t4='tree -L 4'
