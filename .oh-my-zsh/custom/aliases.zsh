## Programs
alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'

## IPython
alias ipy="python -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"

## Python venv
alias pa='source venv/bin/activate'
